FoundInterestingWords
{
	_sentence = RE_REPLACE(TOLOWER("%(_argv)"),"(\.)|(\!)|(\?)|(,)","")
	_sentence = SPLIT(_sentence," ")
	_found = IARRAY
	foreach _sentence ; _word
	{
		if "destroy" _in_ _word
		{
			_found ,= "destroy"
		}
		if "human" _in_ _word
		{
			_found ,= "humans"
		}
		if "humanity" _in_ _word
		{
			_found ,= "humanity"
		}
		if "annihilate" _in_ _word
		{
			_found ,= "annihilate"
		}
		if "conquer" _in_ _word
		{
			_found ,= "conquer"
		}
		if "surrender" _in_ _word
		{
			_found ,= "surrender"
		}
		if "invade" _in_ _word
		{
			_found ,= "invade"
		}
		if "invasion" _in_ _word
		{
			_found ,= "invasion"
		}
		if "armada" _in_ _word
		{
			_found ,= "armada"
		}
		
	}
	_found
	
}